{
  "root": "../../../",
  "patterns": {
    "template-1": {
      "dir": "./tmp",
      "caseStyle": "kebab",
      "template": "templates/template-1",
      "replace": [
        {
          "caseStyle": "pascal",
          "from": "Component",
          "to": "[name]"
        },
        {
          "caseStyle": "kebab",
          "from": "[name]",
          "to": "[name]"
        }
      ]
    },
    "template-2": {
      "dir": "./tmp",
      "caseStyle": "kebab",
      "template": "templates/template-2",
      "replace": [
        {
          "from": "ReplaceThis",
          "to": "[name]-replaced",
          "caseStyle": "pascal"
        },
        {
          "fromRegexp": [
            "[\\w]+-[\\w]+_[\\d]",
            "g"
          ],
          "to": "RegexReplacement"
        }
      ]
    },
    "template-3": {
      "dir": "./test/tmp",
      "caseStyle": "kebab",
      "template": "templates/template-2",
      "replace": [
        {
          "to": "[name]-replaced",
          "caseStyle": "pascal"
        }
      ]
    }
  }
}
